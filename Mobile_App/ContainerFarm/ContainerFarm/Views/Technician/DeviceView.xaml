<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContainerFarm.Views.Technician.DeviceView"
             Title="Container Devices">
    <ScrollView>
        <VerticalStackLayout Padding="8">
            <Label Text="Container Devices" FontSize="27" FontAttributes="Bold" Margin="2,0,0,7"/>

        <!--Temperature-->
            <Frame CornerRadius="15" Padding="10,10,15,10" BackgroundColor="#79D863" Margin="0,8">
                <Grid ColumnDefinitions="auto, 1*, auto"
                  ColumnSpacing="7">
                    <Image Source="temperature.png" WidthRequest="50" Grid.Column="0"/>
                    <Label Text="Temperature" VerticalOptions="Center"  Grid.Column="1"
                           FontSize="20"
                           VerticalTextAlignment="Center"
                           FontAttributes="Bold"/>
                    <Label Text="{Binding Temperature.Value, StringFormat='{0:F2} C'}" VerticalOptions="Center"  Grid.Column="2"
                           FontSize="18" VerticalTextAlignment="Center"/>
            </Grid>
        </Frame>

        <!--Humidity-->
            <Frame CornerRadius="15" Padding="13,10,15,10" BackgroundColor="#79D863" Margin="0,8">
                <Grid ColumnDefinitions="auto, 1*, auto"
                  ColumnSpacing="13">
                    <Image Source="humidity.png" WidthRequest="45" Grid.Column="0"/>
                    <Label Text="Humidity" VerticalOptions="Center" Grid.Column="1"/>
                    <Label Text="{Binding Humidity.Value, StringFormat='{0:F2} %'}" VerticalOptions="Center" Grid.Column="2" />
            </Grid>
        </Frame>

        <!--Soil-->
            <Frame CornerRadius="15" Padding="13,10,15,10" BackgroundColor="#79D863" Margin="0,8">
                <Grid ColumnDefinitions="auto, 1*, auto"
                  ColumnSpacing="13">
                    <Image Source="soil.png"  WidthRequest="45" Grid.Column="0"/>
                    <Label Text="Soil" VerticalOptions="Center"  Grid.Column="1"/>
                    <Label Text="{Binding SoilMoisture.SoilMoisture}" VerticalOptions="Center"  Grid.Column="2" />
            </Grid>
        </Frame>

        <!--Water-->
            <Frame CornerRadius="15" Padding="10" BackgroundColor="#79D863" Margin="0,8">
                <Grid ColumnDefinitions="auto, 1*, auto"
                  ColumnSpacing="13">
                    <Image Source="water.png"  WidthRequest="45" Grid.Column="0"/>
                    <Label Text="Water" VerticalOptions="Center" Grid.Column="1"/>
                    <Label Text="{Binding WaterLevel.Value, StringFormat='{0:F2} %'}" VerticalOptions="Center" Grid.Column="2" />
            </Grid>
        </Frame>

        <!--Light-->
            <Frame CornerRadius="15" Padding="10" BackgroundColor="#79D863" Margin="0,8">
                <Grid ColumnDefinitions="auto, 1*, auto"
                  ColumnSpacing="13">
                    <Image Source="light.png" WidthRequest="45"
                           Grid.Column="0"/>
                    <Label Text="Light" VerticalOptions="Center" Grid.Column="1"/>
                    <HorizontalStackLayout HorizontalOptions="Center" Grid.Column="2" Margin="0,0,10,0" Spacing="7">
                    <Switch IsToggled="{Binding LightActuator.IsOn}" Margin="80,0,0,0" PropertyChanged="LightSwitch_PropertyChanged"/>
                        <Label x:Name="lightStatus" HorizontalOptions="End" VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>
            </Grid>
        </Frame>

        <!--Fan-->
            <Frame CornerRadius="15" Padding="10" BackgroundColor="#79D863" Margin="0,8">
            <Grid ColumnDefinitions="auto, 1*, auto"
                  ColumnSpacing="13">
                
                <Image Source="fan.png" WidthRequest="45"
                       Grid.Column="0"/>
                    <Label Text="Fan" VerticalOptions="Center" Grid.Column="1"/>
                    <HorizontalStackLayout HorizontalOptions="Center" Grid.Column="2" Margin="0,0,10,0" Spacing="7">
                    <Switch IsToggled="{Binding FanActuator.IsOn}" Margin="80,0,0,0" PropertyChanged="FanSwitch_PropertyChanged"/>
                    <Label x:Name="fanStatus" HorizontalOptions="End" VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>
            </Grid>
        </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>